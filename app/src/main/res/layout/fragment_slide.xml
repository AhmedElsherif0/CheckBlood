<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidefragment_rl_idview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".view.Activity.WelcomeActivity.WelcomeScreen">

    <Button
        android:id="@+id/slidefragment_bt_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dim_8dp"
        android:background="@color/green"
        android:text="@string/skip"
        android:textColor="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_slide_vp_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>